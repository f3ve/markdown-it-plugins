{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "changelogPreset": "angular",
  "loglevel": "verbose",
  "command": {
    "version": {
      "allowBranch": "main",
      "changelog": true,
      "conventionalCommits": true,
      "message": "build: version %v"
    }
  },
  "packages": ["packages/*"],
  "npmClient": "pnpm"
}
